<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qingguatang.transcript.dao.CourseDAO">
  <resultMap id="BaseResultMap" type="com.qingguatang.transcript.dataobject.CourseDO">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="gmt_created" jdbcType="TIMESTAMP" property="gmtCreated" />
    <result column="gmt_modified" jdbcType="TIMESTAMP" property="gmtModified" />
    <result column="name" jdbcType="VARCHAR" property="name" />
  </resultMap>

  <insert id="insert" parameterType="com.qingguatang.transcript.dataobject.CourseDO">
    INSERT  INTO ts_course (id, gmt_created, gmt_modified, name)
      VALUES (#{id},now(),now(),#{name})
  </insert>

  <insert id="bathInsert">
    insert into ts_course (`id` ,`gmt_created` ,`gmt_modified` ,`name`) values
    <foreach item="item" collection="list" separator=",">
      (#{item.id}, now(), now(), #{item.name})
    </foreach>
  </insert>

  <!--根据Id查询 对象 -->
  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select id, gmt_created, gmt_modified, name
    from ts_course
    where id = #{id,jdbcType=BIGINT}
  </select>

  <select id="selectByNameAndGmt"  resultMap="BaseResultMap">
    select id, gmt_created, gmt_modified, name
    from ts_course
    where name = #{name} and gmt_created>#{time}
  </select>

</mapper>
